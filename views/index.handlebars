<div class="container">
    <form class="mt-3" id="urlForm">
        <div class="form-group row">
            <label for="longUrl" class="col-sm-2 col-form-label">URL</label>
            <div class="col-sm-10">
                <input type="url" class="form-control" id="longUrl" placeholder="www.example.com">
            </div>
        </div>
        <div class="form-group row">
            <label for="shortcode" class="col-sm-2 col-form-label">Shortcode (optional)</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="shortcode" placeholder="AbC123">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
            </div>
        </div>
    </form>
</div>